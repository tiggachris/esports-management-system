<%- include('../partials/header') %>

<div class="teams-page">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Teams</h2>
        <a href="/teams/create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create Team
        </a>
    </div>

    <div class="row">
        <% teams.forEach(team => { %>
            <div class="col-md-4 mb-4">
                <div class="card team-card h-100">
                    <div class="card-body">
                        <div class="text-center mb-3">
                            <img src="<%= team.logo %>" alt="<%= team.name %>" class="team-logo mb-2">
                            <h5 class="card-title"><%= team.name %></h5>
                        </div>
                        
                        <div class="team-stats text-center mb-3">
                            <div class="row">
                                <div class="col">
                                    <div class="stat-item">
                                        <div class="stat-value"><%= team.players.length %></div>
                                        <div class="stat-label">Players</div>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="stat-item">
                                        <div class="stat-value"><%= team.tournaments.length %></div>
                                        <div class="stat-label">Tournaments</div>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="stat-item">
                                        <div class="stat-value"><%= team.matches ? team.matches.length : 0 %></div>
                                        <div class="stat-label">Matches</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <% if (team.tournaments.length > 0) { %>
                            <div class="current-tournaments mb-3">
                                <small class="text-muted d-block mb-2">Current Tournaments:</small>
                                <% team.tournaments.slice(0, 2).forEach(tournament => { %>
                                    <span class="badge bg-primary me-1"><%= tournament.name %></span>
                                <% }); %>
                                <% if (team.tournaments.length > 2) { %>
                                    <small class="text-muted">+<%= team.tournaments.length - 2 %> more</small>
                                <% } %>
                            </div>
                        <% } %>

                        <div class="d-grid">
                            <a href="/teams/<%= team._id %>" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>

        <% if (teams.length === 0) { %>
            <div class="col-12">
                <div class="alert alert-info text-center">
                    No teams found. Create your first team to get started!
                </div>
            </div>
        <% } %>
    </div>
</div>

<%- include('../partials/footer') %>
